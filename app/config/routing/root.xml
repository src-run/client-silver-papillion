<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="_homepage" path="/" >
        <default key="_controller">FrameworkBundle:Redirect:redirect</default>
        <default key="route">easyadmin</default>
        <default key="permanent">true</default>
    </route>

    <import resource="@AppBundle/Controller/RobotsController.php" type="annotation" />
    <import resource="@AppBundle/Controller/AdminController.php" prefix="/admin" type="annotation" />
    <import resource="@TwigBundle/Resources/config/routing/errors.xml" prefix="/_error" />

</routes>
