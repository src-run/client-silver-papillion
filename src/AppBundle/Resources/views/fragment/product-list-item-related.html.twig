
{#
 # simplified product card
 #}

<div class="card-product-related">
    <div class="card is-linkable is-animated" data-href="{{ path('app_product_view', {'productName': product.getName|slugify, 'product': product.getId, 'category': product.getCategory.getSlug}) }}">

        {% include 'AppBundle:fragment:product-section-head.html.twig' with {
            'product'     : product,
            'price'       : 'hide',
            'class_cards' : 'is-not-overlay has-bg-light-gray',
        } only %}

        {% include 'AppBundle:fragment:product-section-body.html.twig' with {
            'product' : product
        } only %}

        {% include 'AppBundle:fragment:product-section-foot.html.twig' with {
            'product' : product
        } only %}

    </div>
</div>