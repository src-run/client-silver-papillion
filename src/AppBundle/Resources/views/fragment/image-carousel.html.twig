
{#
 # basic bootstrap carousel
 #}

<div id="{{ id|default('carousel') }}" class="carousel slide" data-ride="carousel" data-interval="4000">

    <ol class="carousel-indicators">

        {% for i, c in carousel_slides() %}
            <li data-target="#{{ id|default('carousel') }}" data-slide-to="{{ i }}" class="{% if i == 0 %}active{% endif %}"></li>
        {% endfor %}

    </ol>

    <div class="carousel-inner">
        {% for i, c in carousel_slides() %}
            <div class="item{% if i == 0 %} active{% endif %}">

                <img src="{{ asset_carousel(c.getImage) | imagine_filter('carousel') }}" alt="">

                {% if c.hasCaption %}
                    <div class="carousel-caption">
                        {{ c.getCaption|raw }}
                    </div>
                {% endif %}

            </div>
        {% endfor %}
    </div>

    <a class="left carousel-control" href="#{{ id|default('carousel') }}" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
    </a>

    <a class="right carousel-control" href="#{{ id|default('carousel') }}" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
    </a>

</div>
