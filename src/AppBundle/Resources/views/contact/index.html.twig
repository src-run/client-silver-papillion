{% extends '::base.html.twig' %}

{% block bread %}{{ parent() }} <li>Contact</li>{% endblock %}

{% block body %}
    {% form_theme form 'bootstrap_3_layout.html.twig' %}

    <div class="container container-sr">


        <h3 class="primary-hr-i"><i class="fa fa-envelope"></i> Send Us a <em>Message</em></h3>
        <div class="about-text">
            {{ block_content('about.contact') }}
        </div>

    </div>

    <div class="container-sr-odd">
        <div class="container">
            <div class="contact-form">
                {{ form_start(form) }}
                <div class="contact-form-fields">
                    <div class="contact-form-name-label">
                        {{  form_label(form.name) }}
                    </div>
                    <div class="contact-form-name-field">
                        {{  form_widget(form.name) }}
                    </div>
                    <div class="contact-form-email-label">
                        {{  form_label(form.email) }}
                    </div>
                    <div class="contact-form-email-field">
                        {{  form_widget(form.email) }}
                    </div>
                </div>
                <div class="contact-form-fields">
                    <div class="contact-form-message-label">
                        {{  form_label(form.message) }}
                    </div>
                    <div class="contact-form-message-field">
                        {{  form_widget(form.message) }}
                    </div>
                </div>
                <div class="contact-form-fields">
                    <div class="contact-form-submit">
                        {{ form_widget(form.submit, { 'attr': {'class': 'btn-primary btn-block'} }) }}
                    </div>
                </div>
                {{ form_end(form) }}
            </div>

        </div>
    </div>

{% endblock %}
