{% extends '::base.html.twig' %}

{% block bread %}
    {{ parent() }}
    <li>News</li>
{% endblock %}

{% block body %}
    <div class="container container-sr">
        <div class="feed-social">

            <div id="feed-listing" class="card-feed-listing" {% if has_fb_feed_cached() != true %}data-href="{{ url('app_fragment_feed') }}"{% endif %}>
                {% if has_fb_feed_cached() %}
                    {% include 'AppBundle:fragment:feed-list-whole.html.twig' with {
                        'feed'  : get_fb_feed_cached(),
                        'count' : config('feed.count.news', 12)
                    } only %}
                {% else %}
                    {% include 'AppBundle:fragment:action-status-icon.html.twig' with {
                        'icon'       : 'fa-refresh',
                        'icon_class' : 'fa-spin',
                        'text'       : 'Loading...'
                    } only %}
                {% endif %}
            </div>

            <div class="feed-social-link">
                <div class="card">

                    <h3 class="primary-hr-i">
                        <i class="fa fa-share"></i> {{ block_title('feed.more') }}
                    </h3>

                    {{ block_content('feed.more') }}

                    <a href="{{ block_prop('feed.more', 'link_href') }}" class="btn btn-block btn-primary">
                        {{ block_prop('feed.more', 'link_text') }} <i class="fa fa-long-arrow-right"></i>
                    </a>

                </div>
            </div>

        </div>
    </div>
{% endblock %}
