<?xml version="1.0" encoding="utf-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

  <entity repository-class="AppBundle\Repository\UserRepository" name="AppBundle\Entity\User" table="user">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <one-to-one field="address" target-entity="AppBundle\Entity\Address" fetch="EAGER">
      <join-column name="address_id" />
    </one-to-one>

    <one-to-many field="orders" target-entity="AppBundle\Entity\Order" mapped-by="user" fetch="LAZY">
      <cascade>
        <cascade-remove/>
      </cascade>
    </one-to-many>

  </entity>

</doctrine-mapping>
