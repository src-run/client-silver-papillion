{% extends 'AppBundle:category:base.html.twig' %}

{% block bread %}{{ parent() }} <li>{{ category.getName }}</li>{% endblock %}

{% block bodyRow %}
    {% for product in products %}
    <div class="col-md-4">
        <div class="card">
            <div class="product" data-href="{{ path('app_store_view', {'product_name': product.getName|replace({' ': '-'})|lower, 'product': product.getId}) }}">
                <img src="/uploads/images/products/{{ product.getImage }}" alt="{{ product.getName }} Product Image" />
                <div class="product-info">
                    <div class="product-price">
                        <p>${{ product.getPrice }}</p>
                    </div>
                    <div class="product-name">
                        <h4>{{ product.getName }}</h4>
                    </div>
                    <div class="product-add">
                        <a href="{{ path('app_store_view', {'product_name': product.getName|replace({' ': '-'})|lower, 'product': product.getId}) }}">
                            <span class="hidden">View Item Details</span> <i class="fa fa-cart-plus"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
