<?xml version="1.0" encoding="utf-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

  <entity name="AppBundle\Entity\Category" table="product_category">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="enabled" type="boolean" column="enabled"/>

    <field name="featured" type="boolean" column="featured"/>

    <field name="name" type="string" column="name" length="510"/>

    <field name="description" type="text" column="description" nullable="true"/>

    <field name="image" type="string" column="image" length="510" nullable="true"/>

    <one-to-many field="children" target-entity="AppBundle\Entity\Category" mapped-by="parent" fetch="LAZY"/>

    <many-to-one field="parent" target-entity="AppBundle\Entity\Category" inversed-by="children" fetch="LAZY">
      <join-columns>
        <join-column name="parent_id" referenced-column-name="id"/>
      </join-columns>
    </many-to-one>

    <many-to-many field="products" target-entity="AppBundle\Entity\Product" mapped-by="categories" fetch="EXTRA_LAZY"/>

  </entity>

</doctrine-mapping>
