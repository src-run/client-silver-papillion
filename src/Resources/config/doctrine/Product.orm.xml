<?xml version="1.0" encoding="utf-8"?>

<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

  <entity repository-class="AppBundle\Repository\ProductRepository" name="AppBundle\Entity\Product" table="product">

    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>

    <field name="createdOn" type="datetime" column="created_on" nullable="true" />

    <field name="updatedOn" type="datetime" column="updated_on" nullable="true" />

    <field name="name" type="string" column="name" precision="0" scale="0" nullable="false" />

    <field name="description" type="text" column="description" nullable="true" />

    <field name="tags" type="simple_array" column="tags" nullable="true" />

    <field name="enabled" type="boolean" column="enabled" nullable="false" />

    <field name="featured" type="boolean" column="featured" nullable="false" />

    <field name="image" type="string" column="image" length="255" nullable="true" />

    <field name="price" type="float" column="price" nullable="true" />

    <many-to-many field="categories" target-entity="AppBundle\Entity\Category" inversed-by="products" fetch="EXTRA_LAZY">
      <join-table name="category_mapto_product">
        <join-columns>
          <join-column name="product_id" referenced-column-name="id" on-delete="CASCADE" />
        </join-columns>
        <inverse-join-columns>
          <join-column name="category_id" referenced-column-name="id" on-delete="CASCADE" />
        </inverse-join-columns>
      </join-table>
    </many-to-many>

  </entity>

</doctrine-mapping>
